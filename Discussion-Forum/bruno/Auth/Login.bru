meta {
  name: Login
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/login
  body: json
  auth: none
}

body:json {
  {
    "email": "user@example.com",
    "password": "User@123"
  }
}

script:post-response {
  if (res.status == 200) {
    accessToken = res.getBody().accessToken;
    refreshToken = res.getBody().refreshToken;
    bru.setEnvVar("accessToken",accessToken);
    bru.setEnvVar("refreshToken",refreshToken);
  }
}
